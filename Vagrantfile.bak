# Example 2
#
# Single box with some custom options defined in variables.
#
box      = 'ubuntu-server-trusty'
url      = 'https://cloud-images.ubuntu.com/vagrant/trusty/current/trusty-server-cloudimg-amd64-vagrant-disk1.box'
hostname = 'emberclibox'
domain   = 'example.com'
ip       = '192.168.42.42'
ram      = '512'

Vagrant::Config.run do |config|
  config.vm.box = box
  config.vm.box_url = url
  config.vm.host_name = hostname + '.' + domain
  config.vm.network :hostonly, ip

  config.vm.customize [
    '--name', hostname,
  ]

  config.vm.provider "virtualbox" do |vb|

    # Use VBoxManage to customize the VM. For example to change memory:
    vb.customize ["modifyvm", :id, "--memory", ram]
  end
end
