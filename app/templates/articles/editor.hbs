<form action="">

  <div class="form-group">
    {{input class="form-control" value=model.title}}
  </div>

  <div class="form-group">
    {{textarea rows=10 class="form-control" value=model.body}}
  </div>

  <div class="form-group">
  {{view "select"
    class="form-control"
    content=allSections
    optionLabelPath="content.name"
    selection=model.section
    prompt="Pick a section ..."
  }}
  </div>

  <div class="form-group">
    <button class="btn btn-success" {{action "saveRecord" this}}>save</button>
    <button class="btn btn-primary" {{action "cancelEdit" this}}>cancel</button>
  </div>


</form>

<hr>

